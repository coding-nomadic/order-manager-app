<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffc966" />
            <gradient android:angle="-90" android:startColor="#ffc966" android:endColor="#ffc966"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0e628c" />
            <solid android:color="#0e628c"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0e628c" />
            <gradient android:angle="-90" android:startColor="#0e628c" android:endColor="#0e628c" />
        </shape>
    </item>
</selector>